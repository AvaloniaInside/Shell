<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:i="https://github.com/projektanker/icons.avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ShellBottomNavigator.Views.Widgets.WeatherView">
	<Border Padding="14" Background="{DynamicResource WidgetBackground}">
		<StackPanel>
			<TextBlock Text="Versailles" FontWeight="ExtraBlack"></TextBlock>
			<WrapPanel>
				<i:Icon Value="fa-solid fa-cloud-sun" FontSize="28" />
				<TextBlock Text="  Mostly Cloudy" FontWeight="Light"></TextBlock>
			</WrapPanel>

			<WrapPanel>
				<TextBlock Text="3 ℃" FontWeight="ExtraBlack" FontSize="22"></TextBlock>
				<TextBlock Text="    H: 7℃"></TextBlock>
				<TextBlock Text="   L: 1℃"></TextBlock>
			</WrapPanel>
		</StackPanel>
	</Border>
</UserControl>

