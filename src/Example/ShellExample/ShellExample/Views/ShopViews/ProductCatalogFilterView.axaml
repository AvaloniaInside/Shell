<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shell="clr-namespace:AvaloniaInside.Shell;assembly=AvaloniaInside.Shell"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ShellExample.Views.ShopViews.ProductCatalogFilterView"
             Width="300"
             Height="400"
             Background="#444444"
             shell:NavigationView.Header="Products">
	<StackPanel>
		<TextBlock Text="Select the category"
		           VerticalAlignment="Center"
		           HorizontalAlignment="Center"
		           FontWeight="ExtraBlack"
		           Height="40">
		</TextBlock>

		<ScrollViewer Height="320">
			<ListBox Items="{Binding Categories}"
			         SelectedItem="{Binding SelectedCategory}">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<StackPanel Orientation="Horizontal">
							<Image Source="/Assets/Icons/check-solid.png" Width="24" Stretch="Uniform"></Image>
							<TextBlock Text="{Binding .}" />
						</StackPanel>
					</DataTemplate>
				</ListBox.ItemTemplate>

				<!-- <ListBox.Styles> -->
				<!-- 	<Style Selector="ListBoxItem Image"> -->
				<!-- 		<Setter Property="IsVisible" Value="False"></Setter> -->
				<!-- 	</Style> -->
				<!-- 	<Style Selector="ListBoxItem:selected Image"> -->
				<!-- 		<Setter Property="IsVisible" Value="True"></Setter> -->
				<!-- 	</Style> -->
				<!-- </ListBox.Styles> -->
			</ListBox>
		</ScrollViewer>
		<StackPanel Height="40">
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="8">
				<Button Content="Close" Command="{Binding CloseCommand}"></Button>
				<Button Content="Clear filter" Foreground="Red" Command="{Binding ClearCommand}"></Button>
			</StackPanel>
		</StackPanel>
	</StackPanel>
</UserControl>
